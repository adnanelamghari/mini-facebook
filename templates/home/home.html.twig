{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}
{% block friends %}
    {% for friend in app.user.friends %}
        <div class="row" style="margin-left: 0px">
            <div class="col-lg-1">
                <img src="{{ asset('images/no-img-user.png') }}" class="rounded-circle hvr-pulse-grow" width="40"
                     height="40">
            </div>
            <div class="col-lg-10 row" style="margin-left: 5px">
                <p style="margin-left: 10px; margin-top: 7px; color: white">{{ friend.firstname }} {{ friend.lastname }}</p>
                {% if friend.isOnline %}
                    <span class="indicator text-primary d-none d-lg-block" style=" margin-left: auto;">
                      <i class="fa fa-fw fa-circle"></i>
                    </span>
                {% endif %}
            </div>
        </div>
    {% endfor %}
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-8"><br><br>
            <div class="col-12" id="new_status" class="card">
                <ul class="col-12" id="post_header" role="navigation">
                    <li><a href="#"><span class="fa fa-pencil"></span> Update Status</a></li>
                    <li><a href="#"><span class="fa fa-picture-o"></span> Add Photos/Video</a></li>
                    <li><a href="#"><span class="fa fa-th"></span> Create Photo Album</a></li>
                </ul>
                {{ form_start(form) }}
                <div class="col-12 row" id="post_content">
                    <div class="col-2">
                        <img alt="profile picture" src="{{ asset('images/no-img-user.png') }}" height="60px"
                             class="rounded-circle hvr-pulse-grow">
                    </div>
                    <div class="textarea_wrap col-10" style="padding-left: 0px;">

                        {{ form_row(form.content, {'label' : false, 'attr': {'class': 'col-12' , 'placeholder': "What's on your mind?"}}) }}

                    </div>
                </div>
                <div class="col-12 row" id="post_footer">
                    <ul class="navbar-nav col-7" style="display: inline-block;">
                        <li><a href="#"><span class="fa fa-camera"></span></a></li>
                        <li><a href="#"><span class="fa fa-user"></span></a></li>
                        <li><a href="#"><span class="fa fa-glass"></span></a></li>
                        <li><a href="#"><span class="fa fa-map-marker"></span></a></li>
                    </ul>
                    <div class="col-5">
                        <button class="btn btn-default"><span class="fa fa-cog"></span> Custom</button>
                        <button class="btn btn-primary" type="submit">Post</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
            <br>
            <div class="facebook-box col-12 card ">
                <div class="content">
                    <div class="right-icon">
                        <i class="fa fa-angle-down"></i>
                    </div>
                    <div class="row">
                        <div class="col-2 avatar">
                            <img src="{{ asset('images/no-img-user.png') }}" width="60px" alt="profile pic"
                                 class="rounded-circle hvr-pulse-grow"/>
                        </div>
                        <div class="col-10 name">
                            <h5><a href="http://khoipro.com" target="_blank">Adnane Lamghari</a></h5>
                            <span class="sub">10 October 2015 at 15:00</span>
                        </div>
                    </div>
                    <div class="row text" style="margin-top: 20px">
                        Spacebook is a social network, created by adnane lamghari within a test proposed by Appartoo for
                        an intership
                        opportunity, the website has become a personnal project for him, so he will not stop coding in
                        it, until finishing it.
                    </div>
                    <div class="row thumbnail">
                        <img src="{{ asset('images/background.svg') }}" alt="" class="img-fluid" style="width: 100%"/>
                    </div>
                    <div class="row action btn-group col-12">
                        <button href="#" class="btn col-4 bg-white"><span class="fa fa-thumbs-up"></span> Like</button>
                        <button href="#" class="btn col-4 bg-white"><span class="fa fa-comment"></span> Comment</button>
                        <button href="#" class="btn col-4 bg-white"><span class="fa fa-share"></span> Share</button>
                    </div>
                </div>
                <div class="footer ">
                    <a href="#">6 people</a> like this.
                    <div class="row">
                        <div class="col-1 small-avatar">
                            <img src="{{ asset('images/no-img-user.png') }}" width="32px" alt=""/>
                        </div>
                        <div class="col-10 write-comment">
                            <input type="text" placeholder="Write your comment...">
                        </div>
                    </div>
                </div>
            </div>
            {% for status in status %}
                <br>
                <div class="facebook-box col-12 card ">
                    <div class="content">
                        <div class="right-icon">
                            <i class="fa fa-angle-down"></i>
                        </div>
                        <div class="row">
                            <div class="col-2 avatar">
                                <img src="{{ asset('images/no-img-user.png') }}" width="60px" alt="profile pic"
                                     class="rounded-circle hvr-pulse-grow"/>
                            </div>
                            <div class="col-10 name">
                                <h5><a href="{{ path('profile', {idUser: status.user.id}) }}"
                                       target="_blank">{{ status.user.firstname }} {{ status.user.lastname }}</a></h5>
                                <span class="sub">{{ status.date |localizeddate('long', 'short') }}</span>
                            </div>
                        </div>
                        <div class="row text" style="margin-top: 20px">
                            {{ status.content }}
                        </div>
                        <div class="row thumbnail">
                            {% if status.image is not empty %}
                                <img src="http://placehold.it/600x350" alt="" class="img-fluid"/>
                            {% endif %}
                        </div>
                        <div class="row action btn-group col-12">
                            <button href="#" class="btn col-4 bg-white"><span class="fa fa-thumbs-up"></span> Like
                            </button>
                            <button href="#" class="btn col-4 bg-white"><span class="fa fa-comment"></span> Comment
                            </button>
                            <button href="#" class="btn col-4 bg-white"><span class="fa fa-share"></span> Share</button>
                        </div>
                    </div>
                    <div class="footer ">
                        <a href="#">6 people</a> like this.
                        <div class="row">
                            <div class="col-1 small-avatar">
                                <img src="{{ asset('images/no-img-user.png') }}" width="32px" alt=""/>
                            </div>
                            <div class="col-10 write-comment">
                                <input type="text" placeholder="Write your comment...">
                            </div>
                        </div>
                        {% for comment in status.comments %}
                            <div class="row">
                                <div class="col-1 small-avatar">
                                    <img src="{{ asset('images/no-img-user.png') }}" width="32px" alt=""/>
                                </div>
                                <div class="col-10 write-comment">
                                    {{ comment.content }}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-lg-1"><br><br><br>
        </div>
        <div class="col-lg-3 border-left"><br><br><br>
            <div class="row" style="margin-left: 0px">
                <div class="col-lg-10 row">
                    <p style="margin-left: 50px; margin-top: 7px;">adnane lamghari</p>
                </div>
                <div class="col-lg-2">
                    <img src="{{ asset('images/no-img-user.png') }}" class="rounded-circle hvr-pulse-grow" width="40"
                         height="40">
                </div>
            </div>
            <div class="row margin-top">
                <div class="col-lg-10 row" style="margin-left: 5px">
                    <a class="d-none d-lg-block float-right" href="#" style=" margin-left: auto;">
                        Parameters
                    </a>
                    <i class="fa fa-gear col-1"></i>
                </div>
            </div>
            <div class="row margin-top">
                <div class="col-lg-10 row" style="margin-left: 5px">
                    <a class="d-none d-lg-block " href="#" style=" margin-left: auto;">
                        Messenger
                    </a>
                    <i class="fa fa-wechat col-1"></i>
                </div>
            </div>
            <div class="row margin-top">
                <div class="col-lg-10 row" style="margin-left: 5px">
                    <a class="d-none d-lg-block " href="{{ path('friends') }}" style=" margin-left: auto;">
                        Friends List
                    </a>
                    <i class="fa fa-wechat col-1"></i>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
